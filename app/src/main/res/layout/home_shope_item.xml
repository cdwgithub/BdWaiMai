<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="80dp"
    android:layout_margin="10dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iv_list_icon_shop"
        android:src="@drawable/shopone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_toptext"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/iv_list_icon_shop"
        android:layout_toEndOf="@id/iv_list_icon_shop"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_weight="1"
            android:textSize="16sp"
            android:id="@+id/tv_list_shopname"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="必胜客欢乐餐厅（上地华联店）"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_list_icon"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/home_list_icon"
                android:layout_margin="5dp"
                android:background="#cccccc"/>
            <ImageView
                android:layout_width="@dimen/home_list_icon"
                android:layout_height="@dimen/home_list_icon"
                android:id="@+id/iv_list_icon_quan"
                android:background="@drawable/waimai_shoplist_item_icon_juan"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/home_list_icon"
                android:layout_margin="5dp"
                android:background="#cccccc"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/home_list_icon"
                android:layout_margin="5dp"
                android:background="#cccccc"/>
            <ImageView
                android:layout_width="@dimen/home_list_icon"
                android:layout_height="@dimen/home_list_icon"
                android:id="@+id/iv_list_icon_jian"
                android:background="@drawable/waimai_shoplist_item_icon_jian"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/home_list_icon"
                android:layout_margin="5dp"
                android:background="#cccccc"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:background="#cccccc"/>
            <ImageView
                android:layout_width="@dimen/home_list_icon"
                android:layout_height="@dimen/home_list_icon"
                android:id="@+id/iv_list_icon_mian"
                android:background="@drawable/waimai_shoplist_item_icon_mian"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/home_list_icon"
                android:layout_margin="5dp"
                android:background="#cccccc"/>
        </LinearLayout>
    </LinearLayout>


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_list_icon"
        style="@style/rating_bar"
        android:id="@+id/rb_list_icon_star"
        android:rating="3"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_list_icon_shop"
        android:layout_toEndOf="@id/iv_list_icon_shop"
        android:layout_below="@id/ll_toptext">
    </RatingBar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_list_icon"
        android:id="@+id/tv_list_sales"
        android:layout_toRightOf="@id/rb_list_icon_star"
        android:layout_toEndOf="@id/rb_list_icon_star"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_toptext"
        android:textColor="@color/list_text_small"
        android:text="已售566份"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_list_icon"
        android:id="@+id/tv_list_distance"
        android:layout_below="@id/ll_toptext"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/list_text_small"
        android:text="990m"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_list_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_list_icon_shop"
        android:layout_toEndOf="@id/iv_list_icon_shop"
        android:layout_below="@id/rb_list_icon_star"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_list_icon"
            android:id="@+id/tv_list_qisong"
            android:textColor="@color/list_text_small"
            android:text="起送￥20"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/home_list_icon"
            android:layout_margin="5dp"
            android:background="#cccccc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_list_icon"
            android:id="@+id/tv_list_peisong"
            android:textColor="@color/list_text_small"
            android:text="配送￥5"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="@dimen/home_list_icon"
            android:layout_margin="5dp"
            android:background="#cccccc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_list_icon"
            android:textColor="@color/list_text_small"
            android:id="@+id/tv_list_time"
            android:text="平均45分钟"/>
    </LinearLayout>



</RelativeLayout>
